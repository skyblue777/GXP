<tr>
  <td><%= attachment_image_tag product, :image, :fill, 100, 100, class: 'project-img', fallback: "http://lorempixel.com/260/260/nature/#{rand(1..10)}" %></td>
  <td><%= product.id %></td>
  <td><%= product.name %></td>
  <td><%= number_to_currency product.price %></td>
  <td class="text-right">
    <%= link_to 'Edit', edit_admin_product_path(product) %>
    &nbsp; / &nbsp;
    <%= link_to 'Delete', admin_product_path(product), method: :delete, data:  { confirm: 'Are you sure you want to delete the product "' + product.name.to_s + '"?' } %>
  </td>
</tr>
