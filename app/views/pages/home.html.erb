<!-- Modal -->
<script type="text/javascript">
  $(document).ready(function(){  
	$(".close").click(function(){
	   $('#video').each(function (){   
		  this.currentTime = 0;
		  this.pause();
		});
	});

	$(".find-out-btn").click(function(evt){
	   $('#info_video').each(function (){   
		  if(this.paused){
			this.play();
		  }else{
			this.pause();
		  }
		});        
	});

  });
</script>

