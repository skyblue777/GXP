<h1>Customer New Order</h1>
<div>
	<p>Customer Name: <%= @address.name %></p>
	<p>Shiping Address: <%= @address.street+", "+@address.city+", "+@address.state+", "+ISO3166::Country[@address.country].name+", "+@address.zip %></p>
	<%if !@address.mobile.blank? %>
		<p>Phone No:<%= @address.mobile %></p>
	<%end%>
</div>
<div class="container">
	<h2>Order Details:</h2>
	<% @orders.each do |ord| %>
		<div class="row">
			<div class="col-md-6">
				<p><b>Product Name: <%= ord.name %></b></p>
				<p><b>Product Type: <%= ProductPrice.find_by(id: ord.product_price_id).book_type %></b></p>
				<p>Description:<%= ord.description %></p>
			</div>
			<div class="col-md-3">
				<p><b>Product Qty:</b> <%= ord.quantity %></p>
			</div>
			<div class="col-md-3">
				<p><b>Product Price:</b> <%= ord.price %></p>
			</div>
		</div>		
	<%end%>
		<div class="row">
			<div class="col-md-6"></div>
			<div class="col-md-3"></div>
			<div class="col-md-3">
				<p><b>Total Price:</b> <%= @orders.sum(:price) %></p>
			</div>
		</div>	
</div>