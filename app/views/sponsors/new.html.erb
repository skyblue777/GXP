<script type="text/javascript">
  $(document).ready(function(){
    $("input[type=email], input[type=tel], input[type=password],input[type=text], input[type=date]").each(function(e) {
      $(this).wrap('<fieldset></fieldset>');
      var tag = $(this).attr("placeholder");
      //var tag= $(this).data("tag");
      $(this).attr("placeholder", "");
      $(this).after('<label for="name">' + tag + '</label>');
    });

    $("input[type=email], input[type=tel], input[type=password],input[type=text], input[type=date]").on('blur', function() {
      if (!$(this).val() == "") {
        $(this).next().addClass('stay');
      } else {
        $(this).next().removeClass('stay');
      }
    });
  });
</script>