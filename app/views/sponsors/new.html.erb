<script type="text/javascript">
  $(document).ready(function(){
  $('#sponsor_phone').keypress(function(event) {
    var $this = $(this);
    if ((event.which != 46 || $this.val().indexOf('.') != -1) &&
       ((event.which < 48 || event.which > 57) &&
       (event.which != 0 && event.which != 8))) {
           event.preventDefault();
    }
    var text = $(this).val();
    if ((event.which == 46) && (text.indexOf('.') == -1)) {
        setTimeout(function() {
            if ($this.val().substring($this.val().indexOf('.')).length > 0) {
                $this.val($this.val().substring(0, $this.val().indexOf('.') + 0));
            }
        }, 1);
    }    
  });    
    $("#btn_sponcership").click(function(evt){
      var emailReg = /^([\w-\.]+@([\w-]+\.)+[\w-]{2,4})?$/;
      if(!emailReg.test($("#sponsor_email").val()) && $("#sponsor_email").val() != ""){
        alert("Invalid email Id.");
        evt.preventDefault();
      }
      if($("#sponsor_name").val() == ""){
        $("#spon_name_error").removeClass("spon_name_error");
        evt.preventDefault();
      }else{
        $("#spon_name_error").addClass("spon_name_error");
      }
      if($("#sponsor_phone").val() == ""){
        $("#spon_phone_error").removeClass("spon_phone_error");
        evt.preventDefault();
      }else{
        $("#spon_phone_error").addClass("spon_phone_error");
      }
      if($("#sponsor_email").val() == ""){
        $("#spon_email_error").removeClass("spon_email_error");
        evt.preventDefault();
      }else{
        $("#spon_email_error").addClass("spon_email_error");
      }  
    });
  });
</script>

